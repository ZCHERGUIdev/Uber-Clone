<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="48dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:context=".AcountActivity">

    <ImageView
        android:id="@+id/imageLoginLogo"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/uber" />

    <EditText
        android:id="@+id/textUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageLoginLogo"
        android:layout_centerVertical="true"
        android:layout_marginTop="48dp"
        android:hint="username"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:text="" />

    <EditText
    android:id="@+id/textPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textUsername"
    android:layout_centerVertical="true"
    android:layout_marginTop="10dp"
    android:hint="password"
    android:inputType="textPassword"
    android:maxLines="1"
    android:text=""

    />

    <Button
        android:id="@+id/btnSignupLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPassword"
        android:layout_marginTop="10dp"
        android:background="@color/UbercolorBlack"
        android:text="Sign Up"
        android:textColor="@color/UbercolorGray"
        android:textSize="20sp"
        android:onClick="doSignupOrLogin"
        />

    <TextView
        android:id="@+id/textViewSignupLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSignupLogin"
        android:layout_marginTop="20sp"
        android:onClick="ActiveDefaultBehaviour"
        android:text="LogIn"
        android:textAlignment="center"
        android:textColor="@color/UbercolorLink" />

    <View
        android:id="@+id/viewid"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewSignupLogin"
        android:layout_marginTop="50dp"
        android:background="@color/UbercolorGray"
        android:rotation="0" />




</RelativeLayout>